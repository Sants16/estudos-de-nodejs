<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add">
    <button class="btn btn-success"> Nova categoria </button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small><strong>Slug:</strong> {{slug}}</small>
            <br>
            <small><strong>Data de criação:</strong> {{#formatDate data}}{{/formatDate}} </small>
        </div>
    </div>
{{else}}

{{/each}}